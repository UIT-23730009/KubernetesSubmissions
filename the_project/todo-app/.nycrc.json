{
  "all": true,
  "include": ["app.js", "routes/**/*.js", "src/**/*.js"],
  "exclude": [
    "test/**",
    "coverage/**",
    "node_modules/**",
    "**/*.test.js",
    "**/*.spec.js"
  ],
  "reporter": ["text", "text-summary", "html", "lcov"],
  "report-dir": "./coverage",
  "extension": [".js"],
  "require": ["dotenv/config"],
  "sourceMap": true,
  "instrument": true,
  "check-coverage": true,
  "lines": 80,
  "functions": 80,
  "branches": 80,
  "statements": 80
}
