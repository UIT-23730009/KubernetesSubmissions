{
  "name": "todo-app",
  "version": "1.4.4",
  "type": "module",
  "description": "The project is a simple todo application with the familiar features of create, read, update, and delete (CRUD). Todo is a text like \"I need to clean the house\" that can be in the state of not-done or done.",
  "main": "server.js",
  "scripts": {
    "test": "mocha --timeout 5000 --require dotenv/config",
    "test:coverage": "c8 mocha --timeout 5000 --require dotenv/config 'test/**/*.test.js'",
    "coverage": "c8 mocha 'test/**/*.test.js'",
    "changeset": "changeset version",
    "sync-version": "node ../bin/sync-version.js",
    "dev": "node server.js",
    "start": "nodemon server.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/QuangCuong-Huynh/KubernetesSubmissions.git"
  },
  "author": "QuangCuong-Huynh/",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/QuangCuong-Huynh/KubernetesSubmissions/issues"
  },
  "homepage": "https://github.com/QuangCuong-Huynh/KubernetesSubmissions#readme",
  "dependencies": {
    "chai": "^6.2.0",
    "chai-http": "^5.1.2",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.2.0",
    "expresse": "^1.0.2",
    "helmet": "^8.1.0",
    "mermaid": "^11.12.1",
    "morgan": "^1.10.1",
    "nodemon": "^3.1.10",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "c8": "^10.1.3",
    "chai": "^6.2.0",
    "mocha": "^11.7.4",
    "sinon": "^21.0.0",
    "supertest": "^7.1.4"
  },
  "c8": {
    "all": true,
    "include": [
      "app.js",
      "routes/**/*.js",
      "utils/**/*.js"
    ],
    "exclude": [
      "test/**",
      "coverage/**",
      "node_modules/**",
      "server.js"
    ],
    "reporter": [
      "text",
      "text-summary",
      "html",
      "lcov"
    ],
    "lines": 95,
    "functions": 95,
    "branches": 90,
    "statements": 95
  }
}
